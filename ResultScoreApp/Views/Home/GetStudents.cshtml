        @foreach (var item in Model)
        {
    <tr>
        <td>@i</td>
        <td>@item.studentVm.FullName</td>
        <td>
            @Html.ActionLink("Править", "EditStudent", new { id = item.scoreVm.Id }) |
            @Html.ActionLink("Удалить", "DeleteStudent", new { id = item.scoreVm.Id })
        </td>
        <td style="text-align:center">@item.scoreVm.Score1</td>
        <td style="text-align:center">@item.scoreVm.Score2</td>
        <td style="text-align:center">@item.scoreVm.Score3</td>
        <td style="text-align:center">@item.scoreVm.Score4</td>
        <td style="text-align:center">@item.scoreVm.Score5</td>
        <td style="text-align:center">@item.scoreVm.Score6</td>
        <td style="text-align:center">@item.scoreVm.TotalScore</td>
        <td style="text-align:right">@Html.ActionLink("Редактировать оценки", "EditScores", new { id = item.scoreVm.Id })</td>
       
    </tr> i++;
            }
     
