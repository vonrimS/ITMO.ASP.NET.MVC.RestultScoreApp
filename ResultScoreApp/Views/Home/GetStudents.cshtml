}


<h2 style="padding: 10px 0 20px 0">
    Список студентов</h2>




    <table class="table">
        <tr>
            <td></td>
            <td><h5 style="padding:5px 0 5px 0"><a href="/Home/CreateStudent">Создать нового студента</a></h5></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td></td>
            <td style="font-weight: bold; width: 25%">Фамилия Имя Отчество</td>
            <td></td>
            <td style="font-weight: bold; text-align: center; width: 5%">ИАИО</td>
            <td style="font-weight: bold; text-align: center; width: 5% ">ИЯ</td>
            <td style="font-weight: bold; text-align: center; width: 5% ">ОЭТ</td>
            <td style="font-weight: bold; text-align: center; width: 5% ">ЦАП</td>
            <td style="font-weight: bold; text-align: center; width: 5% ">ФКиС</td>
